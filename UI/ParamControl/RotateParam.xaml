<src:BaseParamControl x:Class="iRobotGUI.Controls.RotateParam"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:src="clr-namespace:iRobotGUI.Controls"
		Height="225" Width="180" Background="White" 
		RenderOptions.BitmapScalingMode="HighQuality">
	<Grid>
		<Grid x:Name="RotateGrid" Width="180" Height="180" HorizontalAlignment="Left" VerticalAlignment="Top">
			<Ellipse>
				<Ellipse.Fill>
					<ImageBrush ImageSource="/iRobotGUI;component/pic/irobotcontrol.png"/>
				</Ellipse.Fill>
			</Ellipse>
		</Grid>
		<Label x:Name="labelDegree" ContentStringFormat="Angle: {0}°" Content="0" Margin="0,190,0,0" HorizontalAlignment="Center"  VerticalAlignment="Top" />		

		<TextBlock x:Name="txbDebug" Text="0" HorizontalAlignment="Left" Margin="20,206,0,-42" Width="135" VerticalAlignment="Top" Visibility="Hidden" />
	</Grid>
</src:BaseParamControl>
